<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/single_roundcorners_background"
    android:layout_margin="5dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dovimageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="Image Description" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/dovtextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dovtextCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMP12345"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/dovbtnVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner_btn_background"
        android:textColor="@color/white"
        android:text="Vote"
        android:layout_gravity="center_vertical"/>
</LinearLayout>